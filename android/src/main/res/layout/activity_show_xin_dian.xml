<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#05B58D"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#05B58D">

        <ImageView
            android:id="@+id/icon_goback"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_goback"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="智能检测"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/icon_goback"
            android:gravity="center"
            android:textColor="@android:color/white"/>
    </FrameLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/iv_ava"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            app:is_circle="true"
            android:src="@drawable/default_image"
            app:border_color="#FFFFFF"
            app:border_width="1dp"
            />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_div_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="设备名称:"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:text="医生:"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_connect_doc"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/ic_contact"
            android:layout_marginRight="15dp"
            android:text="联系医生"
            android:textColor="@android:color/white"/>
    </LinearLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F8F8"/>

    <RelativeLayout
        android:id="@+id/rl_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvHr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/tvTuo"
            android:text=""
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvTuo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvHr"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvXY1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTuo"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/tvTuo1"
            android:text=""
            android:textColor="#000"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvXY2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTuo"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/tvXY1"
            android:text=""
            android:textColor="#000"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/hvti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvXY2"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#000"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/hvf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hvti"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#000"
            android:visibility="gone"
            />

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_show"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/shape"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            android:text="详细"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="I"
                android:textColor="#000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="II"
                android:textColor="#000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="III"
                android:textColor="#000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="aVR"
                android:textColor="#000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="aVL"
                android:textColor="#000"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="aVF"
                android:textColor="#000"
                android:visibility="invisible"
                />
        </LinearLayout>

        <idris.com.yiling_plugin.wty.nrdemo.EcgSurfaceView
            android:id="@+id/sf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>


    <Spinner
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:entries="@array/week1"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:layout_marginRight="16dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/shape"
            android:textColor="@android:color/white"
            android:text="开始检测"/>
    </LinearLayout>

</LinearLayout>